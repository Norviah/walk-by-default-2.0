<?xml version="1.0"?>
<bindings>
  <!-- You can change the hotkeys here -->
  <!-- Supported input keys: https://nativedb.red4ext.com/e/1069987916070430 -->

  <!-- Toggle Walk Gamepad Bind -->

  <buttonGroup id="ToggleWalk_Gamepad" timeWindow="0.08f" >
    <button id="IK_Pad_LeftShoulder" />
    <button id="IK_Pad_X_SQUARE" />
  </buttonGroup> 

  <mapping name="ToggleWalk_Button" type="Button" append="true">
    <button id="ToggleWalk_Gamepad" />
	</mapping>

  <!-- Context Provider -->

  <context name="Locomotion" append="true">
    <action name="IncreaseMovementSpeed" map="IncreaseMovementSpeed_Button" />
    <action name="DecreaseMovementSpeed" map="DecreaseMovementSpeed_Button" />
    <action name="ResetMovementSpeed"    map="ResetMovementSpeed_Button" />
    <action name="PrintMovementSpeed"    map="PrintMovementSpeed_Button" />
  </context>

  <!-- Increase Movement Speed Bind -->

  <buttonGroup id="IncreaseMovementSpeed_Key_Binding">
    <button id="IK_Equals" />
  </buttonGroup>

  <buttonGroup id="IncreaseMovementSpeed_Gamepad_Binding" timeWindow="0.08f" >
    <button id="IK_Pad_LeftShoulder" />
    <button id="IK_Pad_Y_TRIANGLE" />
  </buttonGroup> 

  <mapping name="IncreaseMovementSpeed_Button" type="Button">
    <button id="IncreaseMovementSpeed_Key_Binding" />
    <button id="IncreaseMovementSpeed_Gamepad_Binding" />
	</mapping>

  <!-- Decrease Movement Speed Bind -->

  <buttonGroup id="DecreaseMovementSpeed_Key_Binding">
    <button id="IK_Minus" />
  </buttonGroup>

  <buttonGroup id="DecreaseMovementSpeed_Gamepad_Binding" timeWindow="0.08f" >
    <button id="IK_Pad_LeftShoulder" />
    <button id="IK_Pad_A_CROSS" />
  </buttonGroup> 

  <mapping name="DecreaseMovementSpeed_Button" type="Button">
    <button id="DecreaseMovementSpeed_Key_Binding" />
    <button id="DecreaseMovementSpeed_Gamepad_Binding" />
	</mapping>

  <!-- Reset Movement Speed Bind -->

  <buttonGroup id="ResetMovementSpeed_Key_Binding">
    <button id="IK_Backspace" />
  </buttonGroup>

  <buttonGroup id="ResetMovementSpeed_Gamepad_Binding" timeWindow="0.08f" >
    <button id="IK_Pad_LeftShoulder" />
    <button id="IK_Pad_B_CIRCLE" />
  </buttonGroup> 

  <mapping name="ResetMovementSpeed_Button" type="Button">
    <button id="ResetMovementSpeed_Key_Binding" />
    <button id="ResetMovementSpeed_Gamepad_Binding" />
	</mapping>

  <!-- Print Movement Speed Bind -->

  <buttonGroup id="PrintMovementSpeed_Key_Binding">
    <button id="IK_Delete" />
  </buttonGroup> 

  <mapping name="PrintMovementSpeed_Button" type="Button">
    <button id="PrintMovementSpeed_Key_Binding" />
	</mapping>
</bindings>